{
  "name": "Dashboard Financiero Personal",
  "short_name": "Mi Finanzas",
  "description": "Gestiona tus ingresos, gastos y objetivos financieros de manera inteligente. Tu compañero financiero personal.",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#F9FAFB",
  "theme_color": "#3B82F6",
  "orientation": "portrait-primary",
  "scope": "/",
  "id": "/",
  "icons": [
