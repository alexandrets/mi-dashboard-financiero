    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/dashboard-mobile.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Vista principal del dashboard con balance y resumen"
    },
    {
      "src": "/screenshots/ingresos-mobile.png", 
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Gestión de ingresos con formulario y lista"
    },
    {
      "src": "/screenshots/estadisticas-mobile.png",
      "sizes": "390x844", 
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Análisis estadístico y gráficos de gastos"
    }
  ],
  "categories": ["finance", "productivity", "business", "lifestyle"],
  "lang": "es-ES",
  "dir": "ltr",
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+finanzas",
      "url": "/?action=%s"
    }
  ],
  "shortcuts": [
    {
      "name": "Nuevo Ingreso",
      "short_name": "Ingreso",
      "description": "Agregar un nuevo ingreso rápidamente",
      "url": "/?screen=ingresos",
      "icons": [
        {
          "src": "/icons/shortcut-ingreso.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Nuevo Gasto", 
      "short_name": "Gasto",
      "description": "Agregar un nuevo gasto rápidamente",
      "url": "/?screen=gastos",
      "icons": [
        {
          "src": "/icons/shortcut-gasto.png",
          "sizes": "96x96", 
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Ver Estadísticas",
      "short_name": "Stats",
      "description": "Ver análisis y estadísticas financieras",
      "url": "/?screen=estadisticas",
      "icons": [
        {
          "src": "/icons/shortcut-stats.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share-target/",
    "method": "POST",
    "enctype": "application/x-www-form-urlencoded",
    "params": {
      "title": "title",
      "text": "text"
    }
  },
  "display_override": ["window-controls-overlay", "standalone"],
  "handle_links": "preferred"
}